<div class="heading"> Manage Account Managers </div>
<div class="">
  <%= link_to "New Account Manager", new_profile_url(role:"account manager"), {:class => "button_link"} %>
</div>
<div class="section">

  <div class="row top">
    <div class="col">
      #
    </div>
    <div class="col col25">
      Name
    </div>
    <div class="col col25">
      Created At
    </div>
    <div style="clear:both"></div>
  </div>

  <% total_hours = 0 %>
  <% @account_managers.each_with_index do |account_manager, index| %>
    <div class="row">
      <div class="col">
        <%= index + 1%>
      </div>
      <div class="col col25">
      <%if account_manager.try(:profile).present?%>
        <%= link_to  account_manager.try(:profile).try(:full_name), edit_profile_path(account_manager.try(:profile).try(:id),role:account_manager.try(:profile).try(:role).try(:downcase)) %>
      <%end%>
      </div>
      <div class="col col25">
        <%= account_manager.created_at.strftime("%Y-%m-%d %H:%M") %>
      </div>
      <div style="clear:both"></div>
    </div>
  <% end %>
  

  <div class="row bottom">
    <div class="col">
      
    </div>
    <div class="col col25">
      
    </div>
    <div class="col col25">
      
    </div>
    <div class="col">
      
    </div>
    <div class="col">
      <%= @account_managers.count %>
    </div>
    <div style="clear:both"></div>
  </div>
</div>



<% if false %>
<p id="notice"><%= notice %></p>

<h1>Account Managers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_managers.each do |account_manager| %>
      <tr>
        <td><%= account_manager.name %></td>
        <td><%= account_manager.profile_id %></td>
        <td><%= link_to 'Show', account_manager %></td>
        <td><%= link_to 'Edit', edit_account_manager_path(account_manager) %></td>
        <td><%= link_to 'Destroy', account_manager, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account Manager', new_account_manager_path %>
<%end%>