.flex_row
	.flex_col
		= link_to "Time Sheet List", time_sheet_approval_account_managers_path()
		.div{:style=>"font-size:28px"}
			= @work_duration.employee.profile.name
		.div{:style=>"font-weight:bold;font-size:12px"}
			TIME SHEET
	.flex_col{:style=>"flex-shrink:30"}
		-# if  (!@work_duration.is_past_due_date? && @work_duration.is_pending?) || @work_duration.is_resubmitted?
			
.flex_row
	.flex_col
		.flex_row.top_header_title
			Status
		.flex_row.top_header_value
			= @work_duration.time_sheet_status.capitalize
	.flex_col
		.flex_row.top_header_title
			Time Sheet ID
		.flex_row.top_header_value
			= @work_duration.display_id
	.flex_col
		.flex_row.top_header_title
			Period
		.flex_row.top_header_value
			= @work_duration.period
	.flex_col
		.flex_row.top_header_title
			Supplier
		.flex_row.top_header_value
			Vertex IT Systems
	.flex_col{:style=>"flex-grow:10"}
%hr
.div{:style=>"border-bottom:1px solid var(--main-color);color:var(--main-color);width:60px;text-align:center;margin-bottom: -16px;"}
	Details
%hr
.time_sheet_details_container
	Worker ID
	%br
	= @work_duration.id
	.tsd_container
		.tsd_section_header
			Time Worked
		.flex_row.tsd_row
			.flex_col.tsd_col{:style=>"flex-shrink: 0.9;"}
				%b
					Day
			.flex_col.tsd_col{:style=>"text-align:right"}
				= @work_duration.sun.strftime("%m/%d")
				%br
				= @work_duration.sun.strftime("%a")
			.flex_col.tsd_col_right
				= @work_duration.mon.strftime("%m/%d")
				%br
				= @work_duration.mon.strftime("%a")
			.flex_col.tsd_col_right
				= @work_duration.tue.strftime("%m/%d")
				%br
				= @work_duration.tue.strftime("%a")
			.flex_col.tsd_col_right
				= @work_duration.wed.strftime("%m/%d")
				%br
				= @work_duration.wed.strftime("%a")
			.flex_col.tsd_col_right
				= @work_duration.thu.strftime("%m/%d")
				%br
				= @work_duration.thu.strftime("%a")
			.flex_col.tsd_col_right
				= @work_duration.fri.strftime("%m/%d")
				%br
				= @work_duration.fri.strftime("%a")
			.flex_col.tsd_col_right
				= @work_duration.sat.strftime("%m/%d")
				%br
				= @work_duration.sat.strftime("%a")
			.flex_col.tsd_col_right{:style=>"flex-shrink: 0.9;"}
				Total
		.flex_row.tsd_row
			.flex_col.tsd_col
				%b
					Billable
		.flex_row.tsd_row
			.flex_col.tsd_col
				Digital Self Mobil
		- def get_hours_for_day(day)
			- wday = @work_duration.select_day(day)
			- return wday.blank? ? "0.0" : wday.hours.to_f
		.flex_row.tsd_row{:style=>"background:#fff;display:flex"}
			.flex_col.tsd_col{:style=>"flex-shrink: 0.9;"}
				ST/Hr
			.flex_col.tsd_col_right
				0.0
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.mon)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.tue)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.wed)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.thu)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.fri)
			.flex_col.tsd_col_right
				0.0
			.flex_col.tsd_col_right{:style=>"flex-shrink: 0.9;"}
				= @work_duration.all_days.map{|x|x.hours}.inject(:+).to_f
		.flex_row.tsd_row{:style=>"background:#f5fafe"}
			.flex_col.tsd_col{:style=>"flex-shrink: 0.9;"}
				Total
			.flex_col.tsd_col_right
				0.0
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.mon)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.tue)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.wed)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.thu)
			.flex_col.tsd_col_right
				= get_hours_for_day(@work_duration.fri)
			.flex_col.tsd_col_right
				0.0
			.flex_col.tsd_col_right{:style=>"flex-shrink: 0.9;"}
				= @work_duration.all_days.map{|x|x.hours}.inject(:+).to_f
		.tsd_section_header
			Position Information
			.flex_row.tsd_row{:style=>"background:#fff;padding:6px"}
				.flex_col{:style=>"flex-shrink:3"}
					Submit Date
				.flex_col
					= @work_duration.created_at
			.flex_row.tsd_row{:style=>"background:#fff;padding:6px"}
				.flex_col{:style=>"flex-shrink:3"}
					Work Order/Work Order Revision Owner
				.flex_col
					(Not Provided)
			.flex_row.tsd_row{:style=>"background:#fff;padding:6px"}
				.flex_col{:style=>"flex-shrink:3"}
					Site
				.flex_col
					= @work_duration.employee.active_job.location
		

