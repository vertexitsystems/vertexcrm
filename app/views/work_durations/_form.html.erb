<div class="section">
  
  <% today = Date.today # Today's date %>
  <% @days_from_this_week = (today.at_beginning_of_week..today.at_end_of_week).map %>

  <div class="row top">
<!--     <div class="col col12">
      Vendor
    </div> -->

    <div class="col col15">
      Week
    </div>

    <% for day in (today.at_beginning_of_week..today.at_end_of_week).to_a.take(5).map.each { |day| day } do %>
    <div class="col col12">
      <%= day.strftime("%a %d") %>
    </div>
    <% end %>
    <div class="col col6">
      Total Hours
    </div>
    <div class="col col9">
      Status
    </div>
    <div style="clear:both"></div>
  </div>

  <% if @employee != nil %> 
  <% for vendor in @employee.vendors %>
    <div class="row">
      <!-- <div class="col col12">
        
      </div> -->
      <div class="col col15">
        <% date= date.present? ? date.to_datetime : today.at_beginning_of_week%>
        <%= date.strftime("%B %d, %Y") %>
      </div>
      <% proj_id = @employee.projects.where(:vendor_id => vendor.id).first.id %>
      <% total_hours = 0 %>
      <% (date.at_beginning_of_week..date.at_end_of_week).to_a.take(5).map.each { |day| day }.each_with_index do |day, index| %>
        <div class="col col12">
          <% hw = WorkDuration.where(work_day:day, project_id:proj_id) %>
          <% total_hours = total_hours.to_i + hw.try(:first).try(:hours).to_i %>
          <%= form.number_field ["a","b","c","d","e","f","g"][index]+vendor.id.to_s,in: 0..10,class: "value_duration",:value => hw.count > 0 ? hw.try(:first).try(:hours) : 0 %>
        </div>
        <% if index == 4 %>
          <div class="col col6">
            <%= label_tag "#{total_hours}",nil,id: "total_hours" %>
          </div>
          <div class="col col9">
            <%current_status = hw.try(:first).try(:time_sheet_status).present? ? hw.try(:first).try(:time_sheet_status) : "pending" %>
            <%= label_tag "#{current_status}",nil,class:"#{current_status}" %>
          </div>
        <% end %>

      <% end %>
      <div style="clear:both"></div>
    </div>
  <% end %>
  <% end %>

</div>
  
  <div class="section">
    <b> Certification </b> </br >
    For each option below you must chose a or b
    <ol>
      <li> I have reviewed this time card and certify that it 
        <ul>
          <li>
            <%= form.radio_button("time_certify",true) %> Accurately reflects all the hours that i have worked.
          </li>
          <li> <%= form.radio_button("time_certify",false) %> Does not accurately reflects all the hours that I have worked and will notify the administration. </li>
        </ul>
      </li>
      <li> I certify that the company 
        <ul>
          <li> <%= form.radio_button("company_certify",true)%> Provided me with correct meal periods and break as aggreed upon earlier.</li>
          <li> <%= form.radio_button("company_certify",false)%> Did not provide me with correct meal periods and break as aggreed upon earlier and will notify the administration. </li>
        </ul>
      </li>
    </ol>
  </div>

  <% if @employee != nil %>
  <%= form.hidden_field :eid, :value => @employee.id %>
  <%= form.hidden_field :date,:value=> @date %>
  <% end %>
  <div class="section actions">
    <%= form.submit "Submit",class: "btn btn-primary",style: "width:20%;" %>
    <%= form.submit "Save For Later",name: "save_for_later",class: "btn btn-primary",style:"width:20%;margin-right:6%;" %>
  </div>
  <div class="clr"></div>
</div>

<% end %>



