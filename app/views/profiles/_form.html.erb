          <%end%>
          <%= form.file_field :photo, id: "wizard-picture" %> 
        </div>
         <h6 class="">Choose Picture</h6>

    </div>
    <div class="row form_row">
      <div class="col  title">Name: </div>
      <div class="col  field"> <%= form.text_field :full_name %></div>
      <div class="col  title">Mobile: </div>
      <div class="col  field"> <%= form.telephone_field :phone1 %></div>
    </div>
    <div class="row form_row">
      <div class="col title">Landline: </div>
      <div class="col field"> <%= form.telephone_field :phone2 %></div>
      <div class="col title">Address: </div>
      <div class="col field"> <%= form.text_field:address %></div>
      <div class="clr"></div>
    </div>
    <div class="row form_row">
      <div class="col title">Resume: </div>
      <div class="col field"><%= form.file_field :resume%></div>
      <div class="col title">Degree: </div>
      <div class="col field"> <%= form.file_field :degree%></div>
      <div class="clr"></div>
    </div>

    <div class="row form_row heading">
      Login Information
    </div>
    <div class="row form_row">
      <div class="col title">Email: </div>
      <div class="col field"> <%= form.email_field :email %> </div>
      <div class="clr"></div>
    </div>
    <div class="row form_row">
      <div class="col title">Password: </div>
      <div class="col field"> <%= form.text_field :password %> </div>
      <div class="clr"></div>
    </div>
    <% if (params[:role] == "employee" || profile.try(:role).try(:downcase) == "employee") && current_user.is_admin? %>
      <div class="row form_row">
        <div class="col title">Vendor: </div>
        <div class="col field">
          <%= form.select :vendor_id, Vendor.all.map{|r| [r.profile.full_name, r.id]},include_blank: "" %>
        </div>
        <div class="clr"></div>
      </div>
      <div class="row form_row">
        <div class="col title">Rate: </div>
        <div class="col field"> <%= form.text_field :rate %> </div>
        <div class="clr"></div>
      </div>
    <%end%>
    <div class="row form_row" >
      <%= form.hidden_field :user_type, { :value => Profile.role_id(params[:role]) } %>
    </div>
    <div class="row form_row bottom_button">
      <%= form.submit %>
    </div>
  </div>
<% end %>

