      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="section" style="margin:0px">
    <% if params[:role] == "employee" %>
      <div class="row form_row top_title"> Create New Employee </div>
    <%elsif params[:role] == "vendor"%>
      <div class="row form_row top_title"> Create New Vendor </div>
    <%elsif params[:role] == "account manager"%>
      <div class="row form_row top_title"> Create New Account Manager </div>
    <%end%>
    <div class="row form_row heading">
      Personal Information
    </div>
    <div class="picture-container">
        <div class="picture">
          <%if profile.try(:photo).present?%>
            <img src="<%= profile.photo.url %>" class="picture-src" id="wizardPicturePreview" title="">
