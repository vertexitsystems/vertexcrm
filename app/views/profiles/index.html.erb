<p id="notice"><%= notice %></p>
Number of Profiles: <%= Profile.count %><br />
Number of Users: <%= User.count %><br />

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>OLD name</th>
	  <th>NEW name</th>
	  <th>Role</th>
	  <th>Associations</th>
	  <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.full_name %></td>
		<td><%= profile.name %></td>
		<td><%= profile.role %> </td>
		<td>
			<%= profile.account_manager.present? ? "AccMgr" : "" %>
			<%= profile.employee.present? ? "Emp" : "" %>
			<%# profile.vendor.present? ? "Vend" : "" %>
			<%# profile.employer.present? ? "Emplyr" : "" %>
			<%# profile.employer.present? ? "Assist" : "" %>
		</td>
		<td><%= profile.user.blank? ? "<No User>" : profile.user.email %> </td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%# link_to 'New Profile', new_profile_path %>

<h1>Users</h1>

<% User.all.each do |user| %>
User <%= user.id %>: <%= user.email %> 
<% if user.profile == nil %>
(Hanging) - 
<%# link_to "Destroy", destroy_user_path(user), method: :delete, data: { confirm: "Are You sure?" } %>
<% end %>
<%= link_to "Destroy", destroy_user_profiles_url(user_id: user.id), method: :delete, data: { confirm: "You sure?" } %>
<br />
<% end %>